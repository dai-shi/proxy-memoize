---
const selectItems = [
    { id: 0, title: "How it works" },
    { id: 1, title: "Install" },
    { id: 2, title: "How it behaves" },
    { id: 3, title: "Usage with React Context" },
    { id: 4, title: "Using size option" },
    { id: 5, title: "Usage with Zustand" },
];

const { sections } = Astro.props
---
<div id="selector-container" class="sticky flex flex-col h-80px justify-end bg-white dark:(bg-hex-1e1e1e) -top-1 mb-40px <lg:hidden">

    <div
    class="sectionSelector darkSectionSelector flex flex-row justify-start items-end gap-32px bg-white dark:bg-hex-1e1e1e w-full overflow-auto "
    >
    {
        sections.map(({ text, slug }: { text: string, slug: string }) => {
            const href = "#" + slug
            return (
                <a href={href} class="tab-item flex flex-col justify-start items-center gap-16px notActive font-Dm text-14px font-500 text-gray dark:text-hex-A6A6A6">
                    
                       <p class="w-max">{text}
                        </p> 
                        <div class="w-full h-4px rounded-full bg-hex-009B8D hidden" />
                        </a>
                        );
                    })
                }
</div>
<div class="w-full border-b-2px border-b-DEF2F0 -mt-7px dark:(border-b border-hex-A6A6A6)"/>
    

</div>
<script>
    const tabItems = document.querySelectorAll(".tab-item");
    tabItems.forEach((el) => { 
        if (el.attributes.getNamedItem('href')?.value === location.hash) {
            el.classList.add('active')
        }
        el.addEventListener("click", tabOnClick)
    });
    tabItems.forEach((el) => { 
        if (el.attributes.getNamedItem('href')?.value === location.hash) {
            el.classList.add('darkActive')
        }
        el.addEventListener("click", darkTabOnClick)
    });
    if (location.hash) {
        setTimeout(() => {
            document.getElementById(location.hash.slice(1))!.scrollIntoView({ behavior: 'smooth' })
        }, 500)
    }

    function darkTabOnClick(e: Event) {
        const clickedElement = e.currentTarget as Element;

        const currentActiveElement = document.querySelector(".tab-item.active");
        if (currentActiveElement !== null) {
            currentActiveElement.classList.remove("active");
        }
        clickedElement.classList.add("active");
    }
    function tabOnClick(e: Event) {
        const clickedElement = e.currentTarget as Element;

        const currentActiveElement = document.querySelector(".tab-item.darkActive");
        if (currentActiveElement !== null) {
            currentActiveElement.classList.remove("darkActive");
        }
        clickedElement.classList.add("darkActive");
    }
</script>
