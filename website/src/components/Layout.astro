
---
import MainHero from './Mainhero.astro';
import Navbar from './Navbar.astro';
import Sidebar from './Sidebar.astro';
import SectionSelector from './SectionSelector.astro'
---

<html  lang="en">
  <body>
    <div class='overflow-hidden flex flex-col justify-start transition-all duration-300 ease-in-out dark:bg-full-black'>
      <Navbar/>
      <MainHero/> 
      <div class='flex flex-row items-start gap-80px px-48px mt-10'>
      <Sidebar/>
          <div class='flex-col mt-10 w-full'>
<SectionSelector/>
<div class="prose prose-violet w-full max-w-full">

	<slot/> <!-- your content is injected here -->
</div>
          </div>
      </div>
    </div>
  </body>
  <script>
	const parent= document.getElementById('parentHTML')
	const button = document.getElementById('toggleTheme')
	const toggleBg= document.getElementById('switch')
	const search= document.getElementById('searchInput')
	const clearIcon= document.getElementById('clear')
const windowWidth = window.screen.width
//TODO: show and hide the clear icon after typing
if ( search.value) {
clearIcon.style.visibility = "block"
}else{
  
clearIcon.style.visibility = "hidden"
}
	button.addEventListener("click",darkMode)
	function darkMode() {
	if (parent.classList.contains('dark')){
		parent.classList.remove("dark")
		if(windowWidth >1024){
	
			toggleBg.style.left='6px'
		}
		if(windowWidth >768 &&windowWidth <1024){
			toggleBg.style.left='4px'
	
		}

	}
	else{	
		parent.classList.add("dark")
		if(windowWidth >1024){

			toggleBg.style.left='106px'
		}
		if(windowWidth >768 &&windowWidth <1024){
			toggleBg.style.left='48px'

		}

	}

	}
	</script>
</html>